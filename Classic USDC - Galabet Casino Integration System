        /**
         * Save generated documents to files
         */
        public void saveAllDocuments() throws IOException {
            Path outputDir = Paths.get("classicusdc_galabet_integration");
            Files.createDirectories(outputDir);
            
            // Save partnership proposal
            String proposal = generatePartnershipProposal();
            saveToFile(outputDir, "partnership-proposal.txt", proposal);
            
            // Save GitHub PR template
            String githubPR = generateGitHubPRTemplate();
            saveToFile(outputDir, "github-pr-template.md", githubPR);
            
            // Save email template
            String emailTemplate = generateGalabetEmailTemplate();
            saveToFile(outputDir, "galabet-email-template.txt", emailTemplate);
            
            // Save global casino integration
            String globalIntegration = generateGlobalCasinoIntegration();
            saveToFile(outputDir, "global-casino-integration.md", globalIntegration);
            
            // Save summary report
            String summary = generateSummaryReport();
            saveToFile(outputDir, "summary-report.txt", summary);
            
            // Save execution plan
            String executionPlan = generateExecutionPlan();
            saveToFile(outputDir, "execution-plan.txt", executionPlan);
            
            LOGGER.info("All documents saved to: " + outputDir.toAbsolutePath());
        }
        
        private void saveToFile(Path directory, String filename, String content) throws IOException {
            Path filePath = directory.resolve(filename);
            try (BufferedWriter writer = Files.newBufferedWriter(filePath)) {
                writer.write(content);
            }
            LOGGER.info("Saved: " + filename);
        }
        

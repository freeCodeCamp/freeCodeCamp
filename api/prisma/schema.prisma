  is2018FullStackCert          Boolean                       @default(false)
  isApisMicroservicesCert      Boolean                       @default(false)
  isBackEndCert                Boolean                       @default(false)
  isBanned                     Boolean                       @default(false)
  isCheater                    Boolean                       @default(false)
  isClassroomAccount           Boolean                       @default(false)
  isCollegeAlgebraPyCertV8     Boolean                       @default(false)
  isDataAnalysisPyCertV7       Boolean                       @default(false)
  isDataVisCert                Boolean                       @default(false)
  isDonating                   Boolean                       @default(false)
  isFoundationalCSharpCertV8   Boolean                       @default(false)
  isFrontEndCert               Boolean                       @default(false)
  isFrontEndLibsCert           Boolean                       @default(false)
  isFullStackCert              Boolean                       @default(false)
  isHonest                     Boolean                       @default(false)
  isInfosecCertV7              Boolean                       @default(false)
  isInfosecQaCert              Boolean                       @default(false)
  isJsAlgoDataStructCert       Boolean                       @default(false)
  isJsAlgoDataStructCertV8     Boolean                       @default(false)
  isMachineLearningPyCertV7    Boolean                       @default(false)
  isQaCertV7                   Boolean                       @default(false)
  isRelationalDatabaseCertV8   Boolean                       @default(false)
  isRespWebDesignCert          Boolean                       @default(false)
  isSciCompPyCertV7            Boolean                       @default(false)
  keyboardShortcuts            Boolean                       @default(false)
  lastUpdatedAtInMS            Int
  linkedin                     String?
  location                     String?

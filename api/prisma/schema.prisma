generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGOHQ_URL")
}

// USER COLLECTION ---------------------

type File {
  contents String
  ext      String
  key      String
  name     String
  path     String
}

type CompletedChallenge {
  challengeType      Int?         @db.Int
  completedDate      Int
  files              File[]
  githubLink         String?
  id                 String
  isManuallyApproved Boolean?
  solution           String?
  examResults        ExamResults?
}

type PartiallyCompletedChallenge {
  id            String
  completedDate Int
}

type Portfolio {
  description String?
  id          String
  image       String?
  title       String?
  url         String?
}

type ProfileUI {
  isLocked      Boolean
  showAbout     Boolean
  showCerts     Boolean
  showDonation  Boolean
  showHeatMap   Boolean
  showLocation  Boolean
  showName      Boolean
  showPoints    Boolean
  showPortfolio Boolean
  showTimeLine  Boolean
}

type SavedChallenge {
  files         File[]
  id            String
  lastSavedDate Int
}

type QuizAttempt {
  challengeId String @db.ObjectId
  quizId      String @db.ObjectId
  timestamp   Int
}


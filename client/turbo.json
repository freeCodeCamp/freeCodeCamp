{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": ["FCC_*"],
      "outputs": ["public/**"]
    },
    "develop": {
      "env": ["FCC_*"]
    },
    "setup": {
      "env": [
        "FCC_*",
        "CLIENT_LOCALE",
        "CURRICULUM_LOCALE",
        "DEPLOYMENT_ENV",
        "FREECODECAMP_NODE_ENV"
      ],
      "outputs": [
        "config/env.json",
        "i18n/locales/*.json",
        "static/curriculum-data/**",
        "static/js/**"
      ]
    }
  }
}

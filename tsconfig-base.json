{
  "compilerOptions": {
    "lib": ["WebWorker", "DOM", "DOM.Iterable"],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  // since ts-node compiles ts on the fly and then uses node, it needs to
  // compile the scripts to commonjs (or node will complain about the requires)
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "allowJs": true,
      "esModuleInterop": true,
      "types": ["node", "@types/lodash", "@types/lodash-es"]
    },
    "transpileOnly": true
  }
}

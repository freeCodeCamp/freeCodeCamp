nav.navbar.navbar-default.navbar-fixed-top.nav-height
    .navbar-header
        button.hamburger.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            .col-xs-12
                span.hamburger-text Menu
        a.navbar-brand(href='/challenges/next-challenge')
            img.img-responsive.nav-logo(src='https://s3.amazonaws.com/freecodecamp/freecodecamp_logo.svg', alt='learn to code javascript at freeCodeCamp logo')
    .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right.hamburger-dropdown
            li.community-dropdown
                a.dropdown-toggle(data-toggle="dropdown" role="button") Community
                    span.caret
                ul.dropdown-menu
                    li
                        a(href="https://forum.freecodecamp.com" target="_blank") Forum
                    li
                        a(href="https://medium.freecodecamp.com" target="_blank") Medium
                    li
                        a(href="https://youtube.com/freecodecamp" target="_blank") YouTube
                    li
                        a(href="https://gitter.im/freecodecamp/home" target="_blank") Chat
                    li
                        a(href="https://forum.freecodecamp.com/t/free-code-camp-city-based-local-groups/19574" target="_blank") In your city
                    li
                        a(href='/contribute', target='_blank') Contribute
                    li
                        a(href='/about', target='_blank') About
            li.hidden-xs
                a#nav-map-btn(href='/map' onclick='if (!(event.ctrlKey || event.metaKey)) {return false;}') Map
            li.visible-xs
                a(href='/map') Map
            li
                a(href='/donate', target='_blank') Donate
            if !user
                li
                    a(href='/signin') Sign in
            else
                li.brownie-points-nav
                  a(href='/' + user.username) [&thinsp;#{user.points}&thinsp;]
                li.hidden-xs.hidden-sm.avatar
                  a(href='/' + user.username)
                        img.profile-picture.float-right(src='#{user.picture}')
{
  "include": [
    "client/i18n/**/*",
    "client/plugins/**/*",
    "client/src/**/*",
    "client/utils/**/*",
    "tools/**/*.ts",
    "config/certification-settings.ts",
    "config/i18n/**/*"
  ],
  "compilerOptions": {
    "lib": ["WebWorker", "DOM", "DOM.Iterable"],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  // since ts-node compiles ts on the fly and then uses node, it needs to
  // compile the scripts to commonjs (or node will complain about the requires)
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
